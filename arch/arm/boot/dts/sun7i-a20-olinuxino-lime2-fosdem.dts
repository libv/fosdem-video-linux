

/dts-v1/;
#include "sun7i-a20-olinuxino-lime2.dts"

/ {
	model = "Olimex A20-OLinuXino-LIME2-FOSDEM";
	compatible = "olimex,a20-olinuxino-lime2", "allwinner,sun7i-a20";

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm 0 50000 0>;
		/* This table uses a gamma curve with a 1.8 power. */
		brightness-levels = <  0   1   1   1   1   1   2   2
				       3   3   4   5   6   6   7   8
				       9  11  12  13  14  15  17  18
				      20  21  23  24  26  27  29  31
				      33  35  37  39  41  43  45  47
				      49  51  54  56  58  61  63  66
				      68  71  73  76  79  81  84  87
				      90  93  96  99 102 105 108 111
				     114 117 121 124 127 131 134 138
				     141 145 148 152 156 159 163 167
				     171 175 178 182 186 190 194 198
				     203 207 211 215 219 224 228 233
				     237 241 246 250 255>;
		default-brightness-level = <50>;
		enable-gpios = <&pio 2 23 GPIO_ACTIVE_HIGH>; /* PC23 */
	};

	panel: panel {
		compatible = "lemaker,bl035-rgb-002";
		#address-cells = <1>;
		#size-cells = <0>;
		power-supply = <&panel_power>;
		backlight = <&backlight>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			panel_input: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&tcon0_out_panel>;
			};
		};
	};

	panel_power: panel_power {
		compatible = "regulator-fixed";
		regulator-name = "panel-power";
		regulator-min-microvolt = <10400000>;
		regulator-max-microvolt = <10400000>;
		gpio = <&pio 2 24 GPIO_ACTIVE_HIGH>; /* PC24 */
		enable-active-high;
		regulator-boot-on;
	};

	codec_dummy: codec_dummy {
		compatible = "linux,snd-soc-dummy";
		#sound-dai-cells = <0>;
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "fosdem-i2s";
		simple-audio-card,format = "i2s";
		simple-audio-card,mclk-fs = <128>;

		master_cpu: simple-audio-card,cpu {
			sound-dai = <&i2s0>;
			bitclock-master;
			frame-master;
		};

		master_codec: simple-audio-card,codec {
			sound-dai = <&codec_dummy>;
			//bitclock-master;
			//frame-master;
		};
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pin>;
	status = "okay";
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd0_rgb888_pins>;
	status = "okay";
};

&tcon0_out {
	tcon0_out_panel: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&fe0 {
	assigned-clocks = <&ccu CLK_DE_FE0>;
	assigned-clock-parents = <&ccu CLK_PLL_DDR_OTHER>;
	assigned-clock-rates = <256000000>;
};

&fe1 {
	assigned-clocks = <&ccu CLK_DE_FE1>;
	assigned-clock-parents = <&ccu CLK_PLL_DDR_OTHER>;
	assigned-clock-rates = <256000000>;
};

&be0 {
	assigned-clocks = <&ccu CLK_DE_BE0>;
	assigned-clock-parents = <&ccu CLK_PLL_DDR_OTHER>;
	assigned-clock-rates = <256000000>;
};

&be1 {
	assigned-clocks = <&ccu CLK_DE_BE1>;
	assigned-clock-parents = <&ccu CLK_PLL_DDR_OTHER>;
	assigned-clock-rates = <256000000>;
};

&csi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&csi1_pins>;
	status = "okay";

	active-gpios = <&pio 7 7 GPIO_ACTIVE_HIGH>; /* PH7/EINT7 */
};

&pio {
	csi1_pins: csi1_pins {
		pins = "PH24", "PG2", "PG3", /* CLK, H/VSync */
			"PG4", "PG5", "PG6", "PG7", /* R */
			"PG8", "PG9", "PG10", "PG11",
			"PH8", "PH9", "PH10", "PH11", /* G */
			"PH12", "PH13", "PH14", "PH15",
			"PH16", "PH17", "PH18", "PH19", /* B */
			"PH20", "PH21", "PH22", "PH23";
		function = "csi1";
	};

	i2s0_data_pins: i2s0-data-pins {
		pins = "PB6", "PB7", "PB8", "PB12";
		function = "i2s0";
	};
};

&i2s0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2s0_data_pins>;
	status = "okay";
};

&codec {
	status = "okay";
	hp-det-gpio = <&pio 8 14 GPIO_ACTIVE_HIGH>; /* PI14 */
	mic-det-gpio = <&pio 8 15 GPIO_ACTIVE_HIGH>; /* PI15 */
};
